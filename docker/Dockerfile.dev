FROM node:lts-alpine

ARG REACT_APP_MIDDLEWARE_URL
ENV REACT_APP_MIDDLEWARE_URL "$REACT_APP_MIDDLEWARE_URL"

ARG REACT_APP_SOCKET_URL
ENV REACT_APP_SOCKET_URL "$REACT_APP_SOCKET_URL"

ARG REACT_APP_ORG_LOGO_URL
ENV REACT_APP_ORG_LOGO_URL "$REACT_APP_ORG_LOGO_URL"

ARG REACT_APP_ORG_LOGO_SIZE
ENV REACT_APP_ORG_LOGO_SIZE "$REACT_APP_ORG_LOGO_SIZE"

ARG REACT_APP_DARK_THEME
ENV REACT_APP_DARK_THEME "$REACT_APP_DARK_THEME"

ARG REACT_APP_LIGHT_THEME
ENV REACT_APP_LIGHT_THEME "$REACT_APP_LIGHT_THEME"

ARG REACT_APP_ORG_NAME
ENV REACT_APP_ORG_NAME "$REACT_APP_ORG_NAME"

ARG REACT_APP_ORG_FAVICON_URL
ENV REACT_APP_ORG_FAVICON_URL "$REACT_APP_ORG_FAVICON_URL"

ARG REACT_APP_ORG_FONT_URL
ENV REACT_APP_ORG_FONT_URL "$REACT_APP_ORG_FONT_URL"

ARG REACT_APP_ORG_PRIMARY_FONT_NAME
ENV REACT_APP_ORG_PRIMARY_FONT_NAME "$REACT_APP_ORG_PRIMARY_FONT_NAME"

ARG REACT_APP_ORG_SECONDARY_FONT_NAME
ENV REACT_APP_ORG_SECONDARY_FONT_NAME "$REACT_APP_ORG_SECONDARY_FONT_NAME"

WORKDIR /usr/src/app

EXPOSE 3000

CMD npm install && npm run start
