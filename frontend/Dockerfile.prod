FROM node:lts-alpine

ARG REACT_APP_API_URL
ENV REACT_APP_API_URL "$REACT_APP_API_URL"

ARG REACT_APP_BLOCK_EXPLORER_URL
ENV REACT_APP_BLOCK_EXPLORER_URL "$REACT_APP_BLOCK_EXPLORER_URL"

ARG REACT_APP_GTM_ID
ENV REACT_APP_GTM_ID "$REACT_APP_GTM_ID"

ARG REACT_APP_TERMS_URL
ENV REACT_APP_TERMS_URL "$REACT_APP_TERMS_URL"

WORKDIR /app

EXPOSE 3000

COPY ./reedem-app ./

RUN npm install

RUN npm install -g serve

RUN npm run build

CMD ["serve", "-d", "-l", "tcp://0.0.0.0:3000", "-s", "build"]
